{
  "name": "cria-chat-api",
  "version": "1.0.1",
  "description": "Cria chat-bot embedding API",
  "author": "Isaac Kogan",
  "type": "module",
  "scripts": {
    "copy-dist": "copyfiles -u 1 src/assets/* src/assets/**/* src/assets/**/**/* dist/src",
    "dev": "concurrently \"nodemon -x tsx src/server.ts\" \"nodemon -x tsoa spec-and-routes\"",
    "build": "tsoa spec-and-routes && tsc && npm run copy-dist",
    "start": "tsx ./dist/src/server.js",
    "lint": "pretty-quick --staged",
    "format": "prettier -w src",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "botbuilder": "^4.22.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.0.0",
    "hex-to-css-filter": "^5.4.0",
    "ioredis": "^5.3.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.5",
    "node-html-parser": "^6.1.13",
    "swagger-ui-express": "^4.6.3",
    "tsoa": "^5.1.1",
    "tsx": "^4.15.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.5",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^8.1.0",
    "copyfiles": "^2.4.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=16.14.2"
  }
}
