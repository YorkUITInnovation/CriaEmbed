{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "silently-remove-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "name": "Cria Embed API",
    "description": "API for embedding Cria into web-pages on the world wide interwebs!",
    "outputDirectory": "build",
    "specVersion": 3,
    "tags": [
      {
        "name": "Embed",
        "description": "Routes related to web-page embedding"
      },
      {
        "name": "Manage",
        "description": "Routes related to managing embeddable bots"
      }
    ]
  },
  "routes": {
    "routesDir": "build",
    "middleware": "express",
    "esm": true
  }
}
